# Build the docker image with `npx nx docker-build translator`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t translator`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system translator && \
          adduser --system -G translator translator

COPY apps/translator/dist translator/
RUN chown -R translator:translator .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix translator --omit=dev -f install

CMD [ "node", "translator" ]
